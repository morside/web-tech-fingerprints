<MainActivity>:
	orientation: "vertical"

	Label:
		font_size: "40px"
		bold: "true"
		text: "FINGERPRINTS"
		size_hint: (1, 1.6)
	Label:
		bold: "true"
		text: "WEB TECHNOLOGY LOOKUP"
		size_hint: (1, 1.5)
	TextInput:
		id: source_data
		bold: "true"
		multiline: False
		cursor_color: (1, 1, 1, 1)
		foreground_color: (1, 1, 1, 1)
		hint_text: "website URL"
		background_color: (0, 0, 0, 1)
		pos_hint: {"center_x": 0.5, "center_y": 0.6}
		size_hint: (0.5, 0.055)
		padding_y: [self.height / 2.0 - (self.line_height / 2.0) * len(self._lines)]
		canvas.before:
			Color:
				rgba: (1, 1, 1, 1)
			Line:
				width: 1
				rectangle: self.x, self.y, self.width, self.height
	Button:
		bold: "true"
		text: "LOOKUP"
		background_color: (0, 0, 0, 1)
		pos_hint: {"center_x": 0.5, "center_y": 0.5}
		size_hint: (0.2, 0.05)
		canvas.before:
			Color:
				rgba: (1, 1, 1, 1)
			Line:
				width: 1
				rectangle: self.x, self.y, self.width, self.height
		on_press: root.button_trigger()
	Button:
		bold: "true"
		text: "USAGE"
		background_color: (0, 0, 0, 1)
		pos_hint: {"center_x": 0.5, "center_y": 0.42}
		size_hint: (0.2, 0.05)
		canvas.before:
			Color:
				rgba: (1, 1, 1, 1)
			Line:
				width: 1
				rectangle: self.x, self.y, self.width, self.height
		on_press: root.button_usage_trigger()
	Button:
		bold: "true"
		text: "HISTORY"
		background_color: (0, 0, 0, 1)
		pos_hint: {"center_x": 0.5, "center_y": 0.34}
		size_hint: (0.2, 0.05)
		canvas.before:
			Color:
				rgba: (1, 1, 1, 1)
			Line:
				width: 1
				rectangle: self.x, self.y, self.width, self.height
		on_press: root.button_history_trigger()
